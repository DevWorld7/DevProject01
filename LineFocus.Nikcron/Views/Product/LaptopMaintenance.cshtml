      <script>
    function ValidateForm() {

        RequiredTextbox("ModelNumber", "Enter the Model Number")
        RequiredTextbox("ModelName", "Enter the Model Name")
        RequiredTextbox("Chipset", "Enter the Chipset")
        RequiredTextbox("ExpandableMemory", "Enter the Expandable Memory")
        RequiredTextbox("Additionalfeatures", "Enter the Additional Features")
        RequiredTextbox("WarrantySummary", "Enter the  WarrantySummary")

        return AlertError();
    }
    function LoadManufactures() {
        $.getJSON("@Url.Action("GetLookups", "Master", new { LookupType = "Manufacture" })", function (result) {
                var options = '';
                $.each(result, function (item) {
                    options += '<option value="' + result[item].Id + '">' + result[item].Name + '</option>';
                });
                $("select#Manufacture").html(options);
            });
        }

        $(document).ready(function () {
            LoadManufactures();
          
            if ("@ViewBag.Laptopid" != "0") {
            $('#Laptopid').val('@Model.Id');
            $('#ModelName').val('@Model.ModelName');
            $('#ModelNumber').val('@Model.ModelNumber');
            $('#ProductColors').val('@Model.ProductColors');
            $('#Processor').val('@Model.Processor');
            $('#Chipset').val('@Model.Chipset');
            $('#ClockSpeed').val('@Model.ClockSpeed');
            $('#Cache').val('@Model.Cache');
            $('#ExternalStorage').val('@Model.ExternalStorage');
            $('#HardwareInterface').val('@Model.HardwareInterface');
            $('#RPM').val('@Model.RPM');
            $('#HDDCapacity').val('@Model.HDDCapacity');
            $('#OpticalDrive').val('@Model.OpticalDrive');
            $('#ProductWarranties').val('@Model.ProductWarranties');
            $('#OperatingSystem').val('@Model.OperatingSystem');
            $('#SystemArch').val('@Model.SystemArch');
            $('#DisplaySize').val('@Model.DisplaySize');
            $('#DisplayType').val('@Model.DisplayType');
            $('#Keyboard').val('@Model.Keyboard');
            $('#Speakers').val('@Model.Speakers');
            $('#Sound').val('@Model.Sound');
            $('#USBPort').val('@Model.USBPort');
            $('#RJ45LAN').val('@Model.RJ45LAN');
            $('#HDMIPort').val('@Model.HDMIPort');
            $('#VGAport').val('@Model.VGAPort');
            $('#MultiCardSlot').val('@Model.MultiCardSlot');
            $('#Weight').val('@Model.Weight');
