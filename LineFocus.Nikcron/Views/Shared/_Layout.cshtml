                        <a href="#"> <i class="fa fa-table"></i> <span>Stock</span> <i class="fa fa-angle-left pull-right"></i> </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("StockMaintenance", "Stock")"><i class="fa fa-angle-double-right"></i> Add Stock</a></li>
                            <li><a href="@Url.Action("Index","Stock")"><i class="fa fa-angle-double-right"></i> View Stock</a></li>                            
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#"> <i class="fa fa-table"></i> <span>Company</span> <i class="fa fa-angle-left pull-right"></i> </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Index","Company")"><i class="fa fa-angle-double-right"></i> Company</a></li>
                            <li><a href="@Url.Action("Index","Stockhouse")"><i class="fa fa-angle-double-right"></i> Stockhouses</a></li>
                            <li><a href="@Url.Action("Index","Distributor")"><i class="fa fa-angle-double-right"></i> Distrbutors</a></li>
                            <li><a href="@Url.Action("Index","Dealers")"><i class="fa fa-angle-double-right"></i> Dealers</a></li>
                            <li><a href="@Url.Action("Index","Retailer")"><i class="fa fa-angle-double-right"></i> Retailers</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#"> <i class="fa fa-laptop"></i> <span>Products</span> <i class="fa fa-angle-left pull-right"></i> </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Laptops","Product")"><i class="fa fa-angle-double-right"></i> Laptops</a></li>
                            <li><a href="@Url.Action("Mobilephones", "Product")"><i class="fa fa-angle-double-right"></i> Mobilephones</a></li>
                            <li><a href="@Url.Action("Tablets","Product")"><i class="fa fa-angle-double-right"></i> Tablets</a></li>
